<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/styles.css">
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>Node</title>
</head>
<body>
    <header class="bg-light p-3 mb-4">
        <div class="container">
            <a href="/checkout" class="btn btn-primary" id="checkout-button">Checkout</a>
        </div>
    </header>

    <div class="container">
        <h1 class="mb-4">Items</h1>
        <h2 class="mb-4"><%= message %></h2>
        
        <ul id="items-list" class="list-group">
            <% items.forEach(item => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><%= item.name %>: $<%= item.price %></span>
                    <form action="/addToCart" method="POST" class="mb-0">
                        <input type="hidden" name="itemId" value="<%= item.id %>">
                        <button type="submit" class="btn btn-success btn-sm">Add to cart</button>
                    </form>
                </li>
            <% }) %>
        </ul>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
